{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "outDir": "dist", // ✅ add this
        "rootDir": "src" // ✅ add this too (optional but best practice)
    },
    "include": [
        "src/**/*",
        "prisma"
    ]
}
